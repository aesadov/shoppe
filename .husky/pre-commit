#!/usr/bin/env bash

# Явно загружаем nvm (если используется)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# Убедимся, что PATH содержит нужные пути
export PATH="$PATH:$(npm bin):$(npm -g bin)"

# Запуск lint-staged через npx с явным указанием node
npx --no-install lint-staged || {
  echo "Linting failed"
  exit 1
}